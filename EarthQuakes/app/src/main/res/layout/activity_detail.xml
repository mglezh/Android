<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools" android:layout_width="match_parent"
    android:layout_height="match_parent" android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:paddingBottom="@dimen/activity_vertical_margin"
    tools:context="com.mglezh.earthquakes.activities.DetailActivity"
    android:backgroundTintMode="src_over">

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/textPlace"
        android:layout_gravity="center_horizontal"
        android:text="Place"
        android:layout_alignParentTop="true"
        android:layout_toEndOf="@+id/space" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Time"
        android:id="@+id/textTime"
        android:layout_below="@+id/textPlace"
        android:layout_toEndOf="@+id/space" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="match_parent"
        android:id="@+id/textMagnitude"
        android:layout_weight="0.11"
        android:text="Magnitude"
        android:layout_alignParentTop="true"
        android:layout_alignParentStart="true"
        android:autoText="false"
        android:layout_margin="0dp" />

    <Space
        android:layout_width="20px"
        android:layout_height="20px"
        android:layout_toEndOf="@+id/textMagnitude"
        android:layout_alignBottom="@+id/textMagnitude"
        android:layout_alignTop="@+id/textMagnitude"
        android:id="@+id/space" />
</RelativeLayout>
